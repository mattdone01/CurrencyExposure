@model CurrencyExposure.Model.ContactUs

@{
    ViewBag.Title = "Contact Us";
}
<h2 class="mainheading">CONTACT US</h2>

<div class="contact_details">
	<h2>Inquiries</h2>
	<p><a href="mailto:info@currencyexposure.com">sales@currencyexposure.com</a></p>
	<br>
	<br>
	<h2>Mailing Address</h2>
	<p>
		Currency Exposure
			<br>
		PO Box H164<br>
		Australia Square NSW 1215<br>
		Australia
	</p>
</div>

	@using (Html.BeginForm("SaveContactUs", "Home"))
 {
		@Html.ValidationSummary(true)
		
		<fieldset>
			<legend>ContactUs</legend>
			<div class="blog_comments_container lightgreybg" style="width:500px;">
				<div id="comment_Reply">
					<p>
						@Html.EditorFor(model => model.Name)
						@Html.LabelFor(model => model.Name)<br />
						@Html.ValidationMessageFor(model => model.Name)
					</p>
					<p>
						@Html.EditorFor(model => model.Company)
						@Html.LabelFor(model => model.Company)<br />
						@Html.ValidationMessageFor(model => model.Company)
					</p>
					<p>
						@Html.EditorFor(model => model.Email)
						@Html.LabelFor(model => model.Email)<br />
						@Html.ValidationMessageFor(model => model.Email)
					</p>
					<p>
						@Html.EditorFor(model => model.Phone)
						@Html.LabelFor(model => model.Phone)<br />
						@Html.ValidationMessageFor(model => model.Phone)
					</p>
					<p class="text">
						@Html.TextAreaFor(model => model.Comment)<br />
						@Html.ValidationMessageFor(model => model.Comment)
					</p>

					@if (!string.IsNullOrEmpty(ViewData["Message"].ToString()))
			{
						<div class="green">
							<p>@ViewData["Message"].ToString()</p>
						</div>
			}
					<p class="submit">
						<input id="submitcomment" type="submit" value="Submit" />
					</p>
				</div>
			</div>
		</fieldset>
	}
<script>
	$(document).ready(function () {
		$("ul#navigation li").removeClass("selected");
		$("#ContactTab").addClass("selected");
	});
</script>
