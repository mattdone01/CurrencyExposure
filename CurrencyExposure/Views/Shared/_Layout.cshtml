<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
	@Styles.Render("~/Content/kendo/css")
    @Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/kendo")
	@Scripts.Render("~/bundles/currencyexposure")
</head>
	<body>
		<div id="MainSiteDiv">
		<header>
			<div class="content-wrapper">
				<div class="logo">
					<div class="logo"><a href="http://www.currencyexposure.com" title="">
										  <img id="logoimage" src="../../Content/Images/slantlogo.png" alt="" height="100px"></a></div>
				</div>
				<div class="float-right">
					<section id="login">
						@Html.Partial("_LoginPartial")
					</section>
					<nav>
						<ul id="navigation">
							<li id="ContactTab">@Html.ActionLink("Contact", "Contact", "Home")</li>
							<li id="AboutTab">@Html.ActionLink("About", "About", "Home")</li>
							<li id="LinksTab">@Html.ActionLink("Links", "Links", "Home")</li>
							<li id="BlogTab">@Html.ActionLink("Blog", "Blog", "Home")</li>
							<li id="HomeTab" class="selected">@Html.ActionLink("Home", "Index", "Home")</li>
						</ul>
					</nav>
				</div>
			</div>
		</header>
		<div id="body">
			<section class="content-wrapper main-content clear-fix">
				@RenderBody()
			</section>
		</div>
		<footer>
			<div class="float-left">
				<p>&copy; @DateTime.Now.Year - Currency Exposure</p>
			</div>
		</footer>	
		@RenderSection("scripts", required: false)
		</div>
	</body>
</html>
