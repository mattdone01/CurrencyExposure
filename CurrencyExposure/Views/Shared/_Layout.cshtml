﻿<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/kendo/css")
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/kendo")
	@Scripts.Render("~/bundles/currencyexposure")
</head>
	<body>
		<div id="fb-root"></div>
		<script>
			(function(d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s); js.id = id;
				js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
				fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		</script>
		<header>
			<div class="content-wrapper">
				<div class="logo">
					<div class="logo">
						<a href="http://www.currencyexposure.com" title="">
							<img id="logoimage" src="../../Content/Images/slantlogo.png" alt="" height="100px"></a>
					</div>
				</div>
				<div class="float-right">
					<section>
						<div class="home_social">
						<ul>
							<li>
								<a href="mailto:info@CurrencyExposure.com" title="">
									<img src="~/Content/Images/Email.png" alt="">
								</a>
							</li>
							<li>
								<a href="https://twitter.com/CurrencyExposur" title="">
									<img src="~/Content/Images/twitter_icon.png" alt="">
								</a>
							</li>
							<li>
								<a href="http://www.facebook.com/pages/CurrencyExposurecom/430339047010625" title="">
									<img src="~/Content/Images/facebook_icon.png" alt="">
								</a>
							</li>
						</ul>
						</div>
					</section>
					<nav>
						<ul id="navigation">
							<li id="ContactTab">@Html.ActionLink("Contact", "Contact", "Home")</li>
							<li id="AboutTab">@Html.ActionLink("About", "About", "Home")</li>
							<li id="LinksTab">@Html.ActionLink("Links", "Links", "Home")</li>
							<li id="BlogTab">@Html.ActionLink("Blog", "Index", "Blog")</li>
							<li id="HomeTab" class="selected">@Html.ActionLink("Home", "Index", "Home")</li>
						</ul>
					</nav>
				</div>
			</div>
		</header>
		<div id="MainSiteDiv">
			<iframe id="tmc-ticker" src="http://themoneyconverter.com/AUD/RateTicker.aspx" style="width:1060px;height:30px" scrolling="no" frameborder="0" marginwidth="0" marginheight="0"></iframe>
			<div id="body">
				<section class="content-wrapper main-content">
					@RenderBody()
				</section>
			</div>
		</div>
		<footer>
			<div class="footer-middle">
				<label>©2012 CurrencyExposure.com. All rights reserved. </label>
			</div>
		</footer>
		@RenderSection("scripts", required: false)

	</body>
</html>
