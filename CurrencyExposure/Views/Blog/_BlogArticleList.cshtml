@model IEnumerable<CurrencyExposure.Model.BlogSummaryDto>
<ul class="blog_article_list">
	@foreach(var summary in Model)
{
		<li>@Ajax.ActionLink(@summary.Title, "GetBlog", "Blog", new {Id = @summary.Id}, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "section_body", OnSuccess = "ReInitBlogs",OnBegin = "onAjaxBegin", OnComplete = "onAjaxEnd", OnFailure = "onAjaxFailure" })
			<br />
			@summary.Author - @summary.CreateDate.ToShortDateString()
		</li>
}
</ul>
