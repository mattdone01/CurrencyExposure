@model CurrencyExposure.Model.Blog
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
	string Article = Model.Article;
}

<script>
	$(document).ready(function () {
		$("#body").height($(document).height() - 200);
		$("ul#navigation li").removeClass("selected");
		$("#BlogTab").addClass("selected");
	});
</script>

<div id="home_toolad" class="homePage-right-floats">
	<h2>Free Currency Hedging Tool</h2>
	<a href="http://www.currencyexposure.com" title="">
		<img id="img_currencytool" src="../../Content/Images/CurrencyTool.png" alt="">
	</a>
</div>

<div id="home_rates" class="homePage-right-floats">
	<h2>Live Cross Rates</h2>
	<img id="img_crossrates" src="../../Content/Images/rates.png" alt="">
</div>

<div id="home_twitter" class="homePage-right-floats">
	<h2>Twitter Feed</h2>
	<img id="img_twitterfeed" src="../../Content/Images/TwitterFeed.png" alt="">
</div>
<div id="blog_blogarticle">
	<h2>@Html.DisplayFor(model => model.Title)</h2>
	<br />
	<h3>@Html.DisplayFor(model => model.CreateDate) > @Html.DisplayFor(model => model.BlogAuthor.AuthorName) </h3>
	<br />
	@MvcHtmlString.Create(Article)
</div>

