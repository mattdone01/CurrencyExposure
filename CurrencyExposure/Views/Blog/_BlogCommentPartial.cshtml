@model IEnumerable<CurrencyExposure.Model.BlogComment>

@if (!Model.Any())
{
	<h2>No comments...Be the first to comment</h2>
}


@foreach (var item in Model) {
<div id="blog_comments" class="blog_comments_container">
	<div class="blog_comments">
		<h2>@Html.DisplayFor(modelItem => item.Title)</h2><br/>
		<h3>Posted By: @Html.DisplayFor(modelItem => item.Name) on @Html.DisplayFor(modelItem => item.CreateDate)</h3>
		<p>@Html.DisplayFor(modelItem => item.Comment)</p>
	</div>
</div>
}


