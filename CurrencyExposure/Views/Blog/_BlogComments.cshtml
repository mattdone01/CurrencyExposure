@model IEnumerable<CurrencyExposure.Model.BlogComment>

@foreach (var comment in Model)
{
	string mycomment = comment.Comment;
	<div class="home_blogSummary">
		<h2>@comment.Title</h2>
		<br />
		<h3>@comment.CreateDate > @comment.Name</h3>
		<div class="home_blogSummary_text">
			@MvcHtmlString.Create(mycomment)
		</div>
	</div>
}

<div class="home_blogSummary">
	<h2>Enter a comment.</h2>
	@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)

		<fieldset>
			<legend>Log in Form</legend>
			<ol>
				<li>
					@Html.LabelFor(m => m.)
					@Html.TextBoxFor(m => m.UserName)
					@Html.ValidationMessageFor(m => m.UserName)	
				</li>
				<li>
					@Html.LabelFor(m => m.Password)
					@Html.PasswordFor(m => m.Password)
					@Html.ValidationMessageFor(m => m.Password)
				</li>
				<li>
					@Html.CheckBoxFor(m => m.RememberMe)
					@Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
				</li>
			</ol>
			<input type="submit" value="Log in" />
		</fieldset>
		<p>
			@Html.ActionLink("Register", "Register") if you don't have an account.
		</p>
</div>
